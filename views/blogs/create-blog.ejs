<h2>Welcome Create Your Posts Here</h2>
<div class="main_container">
   
    <form action="/create-blog/<%= username %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div>
            <label for="title">Title:</label>
            <input placeholder="Enter Title" type="text" id="title" name="title" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea placeholder="Add description to your post" id="description" name="description" rows="8" cols="50" required></textarea>
        </div>
        <div>
            <label for="image">Image:</label>
            <input placeholder="Add your post" type="file" id="image" name="image" accept="image/*" required>
        </div>
        <button type="submit" >Submit</button>
    </form>
</div>